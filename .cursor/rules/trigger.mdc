async function handlePullRequestEvent(payload: any, io: any) {
  const { action, pull_request } = payload

  if (action === "opened") {
    // Run code analysis
    const analysis = await io.runTask("analyze-code", async () => {
      return await analyzeCodeChanges(pull_request.diff_url)
    })

    // Post review comment
